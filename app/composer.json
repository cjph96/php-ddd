{
    "name": "cjph96/php-ddd-skeleton",
    "type": "project",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "symfony/console": "^6.4",
        "symfony/dotenv": "^6.4",
        "symfony/framework-bundle": "^6.4",
        "symfony/validator": "^6.4",
        "symfony/yaml": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": false
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "psalm/plugin-symfony": "^5.2",
        "symfony/browser-kit": "^6.4",
        "vimeo/psalm": "^6.8"
    }
}
